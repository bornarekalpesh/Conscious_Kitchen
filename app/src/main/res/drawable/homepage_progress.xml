    <item android:id="@android:id/progress"
        android:height="20dp"
        android:top="380dp"
        >
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:bottomLeftRadius="30dip"
                    android:bottomRightRadius="30dip"
                    />
                <solid android:color="@color/trackColor"/>
                <stroke

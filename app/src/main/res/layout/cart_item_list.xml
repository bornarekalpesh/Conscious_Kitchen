
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_Reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp"
        app:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/relativeLayout_FreeCoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativeLayout_point"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/coupons_point">

                    <TextView
                        android:id="@+id/itemamt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="$7.00"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout_point"
                    android:layout_margin="10dp">


                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/iv_cart_item_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/user_profile" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"

                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="25dp"
                        android:layout_toEndOf="@+id/iv_cart_item_image"
                        android:layout_toRightOf="@+id/iv_cart_item_image"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="THE GOBLLER"
                            android:textColor="#323232"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:id="@+id/tv_item_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="$7.00"
                            android:textColor="#ee3924"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_item_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            android:textColor="#323232"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:id="@+id/textView_CouponsTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:text="+2 Extra Patties\n-No Papper Jack Cheese\n-No Pickles\n+Extra Tomatoes."
                            android:textColor="#802319"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#323232"
                android:gravity="center_vertical"
                android:layout_below="@+id/relativeLayout_FreeCoupons"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_remove"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:drawableStart="@drawable/delete"
                    android:drawableLeft="@drawable/delete"
                    android:drawablePadding="5dp"
                    android:text="Remove"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_minus_qty"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="qty"
                        android:textColor="#FFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:id="@+id/tv_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"/>

                    <TextView
                        android:id="@+id/tv_plus_qty"
                        android:text="+"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


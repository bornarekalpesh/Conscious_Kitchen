<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout_SocialMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_google"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Earn 25 Points\nfor each post"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/poppinslight"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/social_yelp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"/>
                <CheckBox
                    android:id="@+id/checkBox_Social_Yelp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginTop="10dp"/>

            <TextView
                android:text="10 pts"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/social_fb"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
                <CheckBox
                    android:id="@+id/checkBox_Social_FB"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:button="@drawable/checkbox_selector"
                    android:checked="true"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:text="10 pts"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/social_insta"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
                <CheckBox
                    android:id="@+id/checkBox_Social_Insta"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:button="@drawable/checkbox_selector"
                    android:checked="true"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:text="10 pts"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/social_twitter"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
                <CheckBox
                    android:id="@+id/checkBox_Social_Twitter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:text="10 pts"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/social_pintrest"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"/>
                <CheckBox
                    android:id="@+id/checkBox_Social_Pin"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:button="@drawable/checkbox_selector"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:text="10 pts"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/textView_PointSocialPopUp"
            android:text="50 TOTAL POINTS"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinslight"/>

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/image_overlay"
        android:scaleType="fitXY"
        android:src="@drawable/close_up"
        tools:ignore="UnusedAttribute" />

    <RelativeLayout
        android:id="@+id/relativeLayout_ReferFriendsTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000">

        <ImageView
            android:id="@+id/imageView_BackReferFriends"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/left_yellow_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinslight"
            android:text="Refer a Friend"
            android:textColor="@color/colorSwitch"
            android:textSize="22sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView_RewardReferFriends"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:src="@drawable/notification_reward" />
            <ImageView
                android:id="@+id/imageView_CartReferFriends"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/notification_cart" />
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_ReferFriendsTitle"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/relativeLayout_Gift"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_circle">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/gift" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_ref_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout_Gift"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinslight"
                android:text="J O H N 4 7 2 4 I U I"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_GiftCodeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_ref_code"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppinslight"
                android:text="Your Invite Code"
                android:textColor="#f3d657"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout_SendInvite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_GiftCodeMessage"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_bg_refer"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/text25Point"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Earn 25 Points"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/text25Point"
                        android:fontFamily="@font/poppinslight"
                        android:text="for each new rewards"
                        android:textColor="#FFF"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_below="@+id/text25Point"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:text="members you invite who signs up."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp" />
<!--                    <TextView-->
<!--                        android:id="@+id/textView_SendInviteMessage"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center_horizontal"-->
<!--                        android:layout_marginStart="30dp"-->
<!--                        android:layout_marginLeft="30dp"-->
<!--                        android:layout_marginTop="15dp"-->
<!--                        android:layout_marginEnd="30dp"-->
<!--                        android:layout_marginRight="30dp"-->
<!--                        android:fontFamily="@font/poppinslight"-->
<!--                        android:gravity="center"-->
<!--                        android:text="@string/str_send_invite_message"-->
<!--                        android:textColor="#FFF"-->
<!--                        android:textSize="16sp" />-->
                </RelativeLayout>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_SendInvite"
                    android:layout_width="210dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="10dp"
                    app:elevation="5dp">

                    <RelativeLayout
                        android:id="@+id/relative_sendinvite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#802319">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp">


                            <ImageView
                                android:id="@+id/imageView_SendInvite"
                                android:layout_width="22dp"
                                android:layout_height="25dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/send" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_toEndOf="@+id/imageView_SendInvite"
                                android:layout_toRightOf="@+id/imageView_SendInvite"
                                android:fontFamily="@font/poppinslight"
                                android:text="SEND INVITES"
                                android:textColor="#FFF"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_SelectContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_SendInvite"
                android:background="#0c2226">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout_SendInviteContact"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/white_circle">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/contacts" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/relativeLayout_SendInviteContact"
                        android:layout_toRightOf="@+id/relativeLayout_SendInviteContact"
                        android:fontFamily="@font/poppinslight"
                        android:text="SELECT FROM CONTACT"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_InviteStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout_SelectContact"
                android:background="@drawable/layout_bg_refer"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_InviteStatusPending"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="10dp"
                        app:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f3d657">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/tv_pending_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="10"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="PENDING"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_InviteYouCanEarn"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="10dp"
                        app:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#802319">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/tv_pending_amt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="250"
                                    android:textColor="#FFF"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="YOU CAN EARN"
                                    android:textColor="#FFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_InviteStatusPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppinslight"
                    android:text="Invite Status - Pending"
                    android:textColor="#FFF"
                    android:textSize="16sp" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_SendReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/linearLayout_InviteStatus"
                android:background="#0c2226">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/relativeLayout_SendInviteTimer"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/yellow_circle">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/timer" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textView_TerryBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/relativeLayout_SendInviteTimer"
                            android:layout_toRightOf="@+id/relativeLayout_SendInviteTimer"
                            android:fontFamily="@font/poppinslight"
                            android:text="Terry Blue"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_TerryBlue"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/relativeLayout_SendInviteTimer"
                            android:layout_toRightOf="@+id/relativeLayout_SendInviteTimer"
                            android:fontFamily="@font/poppinslight"
                            android:text="Waiting for sign up"
                            android:textColor="#FFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_SendReminder"
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="10dp"
                        app:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#802319">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true">


                                <ImageView
                                    android:id="@+id/imageView_SendReminder"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/send" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toEndOf="@+id/imageView_SendReminder"
                                    android:layout_toRightOf="@+id/imageView_SendReminder"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="SEND REMINDER"
                                    android:textColor="#FFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pending_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_InviteStatus">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/linearLayout_InviteStatusSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_pending_list"
                android:background="@drawable/layout_bg_refer"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView_InviteStatusSuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppinslight"
                    android:text="Invite Status - Sign Up Success"
                    android:textColor="#FFF"
                    android:textSize="16sp" />


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/relativeLayout_SendStatusSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/linearLayout_InviteStatusSuccess"
                android:background="#0c2226"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/relativeLayout_SendSuccess"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/yellow_circle">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/star" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textView_ColeHicks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/relativeLayout_SendSuccess"
                            android:layout_toRightOf="@+id/relativeLayout_SendSuccess"
                            android:fontFamily="@font/poppinslight"
                            android:text="Cole Hicks"
                            android:textColor="#FFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView_ColeHicks"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@+id/relativeLayout_SendSuccess"
                            android:layout_toRightOf="@+id/relativeLayout_SendSuccess"
                            android:fontFamily="@font/poppinslight"
                            android:text="25 Points Earned"
                            android:textColor="#FFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_referral_accepted_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_InviteStatusSuccess"/>




        </RelativeLayout>

    </ScrollView>
</RelativeLayout>